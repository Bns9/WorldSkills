/*Goal: practice std::cin for strings
**Write a program that prompts two users for their
**name, address, and phone number. 
**Print the information to the console in the following format:
**name
**\/t\/t address
**\/t\/tphone number
*/

#include<iostream>
#include<string>
using namespace std;

int main()
{
    string n1,n2,a1,a2,p1,p2;
    
    getline(cin, n1);
    getline(cin, a1);
    getline(cin, p1);
    getline(cin, n2);
    getline(cin, a2);
    getline(cin, p2);

    cout<<n1<<"\t\t"<<a1<<"\t\t"<<p1<<"\n";
    cout<<n2<<"\t\t"<<a2<<"\t\t"<<p2<<"\n";

    return 0;
}
